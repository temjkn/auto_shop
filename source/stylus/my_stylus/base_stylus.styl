body 
    font-family Tahoma
    font-size: .89em
    position relative
a
    text-decoration none
    color inherit
ul
    list-style none
.button
    position relative
    height 40px
    width 177px
    border-radius 7px
    background $red_gradient  
    color $white_color
    text-align center
    span 
        color #5f0000
    .button::before
        content ''
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        background  url(../img/back.png)
        opacity .1 
.container
    max-width: 1000px
    margin 0 auto 
    margin-top 20px
    text-align top
.content
    position relative
    max-width 793px
.content, .catalog
    display table-cell